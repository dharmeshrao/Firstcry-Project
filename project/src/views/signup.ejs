<body>
    <div id="logo">
        <img src="https://cdn.fcglcdn.com/brainbees/images/n/fc-logo-s.jpg" alt="">
    </div>
    <div id="signin-box">
        <form action="/signups" method="post">
            <div class="big-text">Register</div>
            <div class="big-text small">Full Name</div>
            <div>
                <input class="big-text small inp" id="name" name="first_name" type="text" placeholder="Enter your Full Name">
            </div>
            <div class="big-text small">Email ID</div>
            <div>
                <input class="big-text small inp" id="email" type="text" name="email" placeholder="Enter your Email ID">
            </div>
            <div class="big-text small">Mobile Number</div>
        <div>
            <input class="big-text small inp" id="mobile" type="text" name="number" placeholder="Enter your Mobile Number">
        </div>
        <div class="big-text small">Password</div>
        <div>
            <input class="big-text small inp" id="password" type="password" name="password" placeholder="Password"
                required>
        </div>
        <div id="btn">
            <button onclick="redirct()" class="big-text small" type="submit" name="submit">SIGNUP</button>
        </div>
        <div id="btn">
            <button onclick="redirct()" class="big-text small" >LOGIN</button>
        </div>
        </form>


    </div>


</body>

</html>
<script>
    function redirct(){
        window.location.href = '/logins'
    }
</script>