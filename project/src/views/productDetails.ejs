<body>
    <main>
        <div class="sticky">
            <div class="header">
            <div class="web">
                <a href="home.html">
                <img src="https://cdn.fcglcdn.com/brainbees/images/n/fc_logo.png" alt="logo">
                </a>
            </div>
            <div class="search-div">
                <input
                  type="res"
                  placeholder="Search for a Category, Brand or Product"
                />
                <img
                  id="searchpng"
                  src="https://image.flaticon.com/icons/png/128/49/49116.png"
                  alt=""
                />
            </div>
            <div id=short-links>
                <div class="location">
                    <span>Select location</span>
                </div>
                <div class="Preschools">
                    <span>Stores & Preschools</span>
                </div>
                <div class="Support">
                    <span>Support</span>
                </div>
                <div class="Trackorder">
                    <span>Track Order</span>
                </div>
                <div class="parenting">
                    <span>Firstcry Parenting</span>
                </div>
                <div class="my-account">
                    <select>
                        <option value="">My Account</option>
                        <option value="">My History</option>
                        <option value="">Manage Returns</option>
                        <option value="">Quick Reorder</option>

                    </select>
                </div>
                <div class="shortlist">
                    <img src="https://www.svgrepo.com/show/14970/heart.svg" class="svg" alt=""> Shortlist
                </div>
                <div onclick="cart()">
                    <img src="https://www.svgrepo.com/show/11541/shopping-cart.svg" class="cart"  alt="">cart
                </div>
            </div>
            </div>
            <div class="category">
                <div class="all-cat">
                    <a href="">ALL CATOGORIES</a>
                </div>
                <div class="all-cat-1">
                    <a href="">BOY FASHION</a>
                </div>
                <div class="all-cat-1">
                    <a href="">GIRL FASHION</a>
                </div>
                <div class="all-cat-1">
                    <a href="">FOOTWEAR</a>
                </div>
                <div class="all-cat-1">
                    <a href="">TOYS</a>
                </div>
                <div class="all-cat-1">
                    <a href="">DIAPERING</a>
                </div>
                <div class="all-cat-1">
                    <a href="">GEAR</a>
                </div>
                <div class="all-cat-1">
                    <a href="">FEEDING</a>
                </div>
                <div class="all-cat-1">
                    <a href="">BATH & SKIN</a>
                </div>
                <div class="all-cat-1">
                    <a href="">NURSERY</a>
                </div>
                <div class="all-cat-1">
                    <a href="">MOMS</a>
                </div>
                <div class="all-cat-1">
                    <a href="">HEALTHY & SAFETY</a>
                </div>
                <div class="all-cat-1">
                    <a href="">BOUTIQUES</a>
                </div>
                <div class="all-cat-1 blue">
                    <a href="">Carter's</a>
                </div>
            </div>
        </div>
        <div class="content" id="content">
            <div class="left-content">
                <div class="img-content">
                    <img src= "<%=el.image %>">
                </div>
                <button onclick="addtoCart(`<%=el._id %>`)">ADD TO CART</button>
                <button>SHORTLIST</button>
            </div>
            <div class="right-content">
                <div class="right-container">
                    <div class="mid-size"><%= el.brandName %></div>
                    <div class="low-size">6 to 9 Months</div>
                    <div class="low-size">Product ID: 3609518</div>
                    <hr>
                    <div class="mid-size price">
                        <span class="cost">Rs.<%= Math.ceil(el.price * (100 - el.discount) / 100)%></span>
                    </div>
                    <div class="rs-res low-size">
                        <span>MRP inc. all taxes, Add'I charges may apply on discounted price</span>
                    </div>
                    <div class="space">
                        <span class="ash">COLOR</span>
                    </div>
                    <div class="space">
                        <span class="ash">SIZE</span><span class="ash box">6 TO 9 MONTHS</span><span class="ash box1">9 TO 12 MONTHS</span>
                    </div>
                    <hr>
                    <div>
                        <img id="tag" src="data:image/png;base64," alt="">
                        <span class="ash">BEST OFFERS</span>
                    </div>
                    <div class="rs-res low-size">
                        <span>Club Offer - Flat 35% Off* | Flat 30% Off for All Users Code: AUTM | Limited period offer |</span>
                    </div>
                    <hr>
                    <div>
                        <span class="ash">FIRSTCRY CLUB BENEFITS</span>
                    </div>
                    <hr>
                    <div>
                        <img id="van" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQlzyqDQ8MGvUA2vcgRENTdAd68IUTv0jZ4Xw&usqp=CAU" alt="">
                        <span class="ash">CHECK DELIVERY DETAILS</span>
                    </div>
                    <div>
                        <input type="res" name="" id="pin" placeholder="Enter Pincode">
                    </div>
                    <div class="low-size">Same Day/Next Day delivery applicable on this product. Enter pincode to check availability in your area.</div>
                    <hr>
                    <div>
                        <span class="ash">PRODUCT DESCRIPTION</span>
                    </div>
                    <div class="low-size no-space">
                        <div class="bold">Specifications</div>
                        <div>Brand-<%= el.brandName %></div>
                        <div>Type-<%= el.category %></div>
                        <div>Fabric-100% Polyster</div>
                        <div>Sleeves-Full</div>
                        <div>Neck-Hooded</div>
                    </div>
                </div>
            </div>
        </div>
    
</body>
